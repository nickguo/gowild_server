<% if current_user.account_type == "teller" %>

<% else %>
    <img src="/images/withdrawals.jpg" width="800px">
    <br></br>
<% end%>

<div class="foreground_content">
    <% if current_user.account_type == "teller" %>
        <div>Withdraw from User Accounts</div>
        <%= form_for current_user do |f| %>
            <%= f.select :from_account, Account.all.collect {|account| [sprintf("%d - $%.2f",account.account_number,account.balance), account.id]}, :prompt => "Select account to withdraw from" %>

            <%= text_field_tag 'amount', '0'%>
            <%= f.hidden_field 'id' %>
            <%= f.submit 'withdraw' %>
        <% end %>

    <% else %>

        <div>Withdraw from Your Accounts</div>
        <%= form_for current_user do |f| %>
            <%= f.select :from_account, current_user.accounts.all.collect {|account| [sprintf("%d - $%.2f",account.account_number,account.balance), account.id]}, :prompt => "Select account to withdraw from" %>

            <%= text_field_tag 'amount', '0'%>
            <%= f.hidden_field 'id' %>
            <%= f.submit 'withdraw' %>
        <% end %>

    <% end %>
</div>
